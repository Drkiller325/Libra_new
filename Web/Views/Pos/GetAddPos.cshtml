@using Application.Poses.ViewModels
@model  AddPosViewModel


<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create a new user</h5>
        <button type="button" class="btn-close" id="btnCancel" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    @using (Ajax.BeginForm("AddPos", "Pos", new AjaxOptions
    {
        HttpMethod = "POST",
    }, new { enctype = "multipart/form-data", id = "PosForm" }))
    {
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Name, "Login", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger validation-message", data_valmsg_for = "Name" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger validation-message", data_valmsg_for = "Telephone" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Cellphone, htmlAttributes: new { @class = "control-label col-md-2 required" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.TextBoxFor(model => model.Cellphone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Cellphone, "", new { @class = "text-danger validation-message", data_valmsg_for = "Cellphone" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Address, "Full Address", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger validation-message", data_valmsg_for = "Address" })
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    @Html.LabelFor(model => model.CityId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-12 col-md-8">
                    @Html.DropDownListFor(model => model.CityId, (SelectList)ViewBag.Cities, "Select Role", new { @class = "form-select dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger validation-message", data_valmsg_for = "CityId" })
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Brand, "Brand", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Brand, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger validation-message", data_valmsg_for = "Brand" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" + (ViewData.ModelState["Email"]?.Errors.Count > 0 ? " is-invalid" : "") } })
                        @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger validation-message", data_valmsg_for = "Model" })
                    </div>
                </div>

                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.ConnectionTypeId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DropDownListFor(model => model.ConnectionTypeId, (SelectList)ViewBag.ConnectionTypes, "Select Role", new { @class = "form-select dropdown-toggle" })
                        @Html.ValidationMessageFor(model => model.ConnectionTypeId, "", new { @class = "text-danger validation-message", data_valmsg_for = "ConnectionTypeId" })
                    </div>
                </div>
            </div>
            <div class="form-horizontal">
            </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Register</button>
                <button type="button" class="btn btn-secondary" id="btnCancel" data-bs-dismiss="modal">Cancel</button>
            </div>
            }
        </div>
