﻿@using Application.Users.ViewModels
@model EditUserViewModel

<script>
    $(document).ready(function () {
        $('input[type=text], input[type=password], input[type=email], select').on('input', function () {
            var fieldName = $(this).attr('name');
            $('span[data-valmsg-for="' + fieldName + '"]').text('');
            $(this).removeClass('is-invalid');
        });
    });
</script>

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modify user</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    @using (Ajax.BeginForm($"EditUser/{Model.Id}", "Admin", new AjaxOptions
    {
        HttpMethod = "POST",
        OnSuccess = "handleCreateUpdateUser"
    }, new { enctype = "multipart/form-data", id = "EditUserForm" }))
    {
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.Id)
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Id, "Id", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger validation-message", data_valmsg_for = "Id" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Id, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control ", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger validation-message", data_valmsg_for = "Login" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger validation-message", data_valmsg_for = "Name" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Telephone, "Phone Number", htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger validation-message", data_valmsg_for = "Telephone" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger validation-message", data_valmsg_for = "Email" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.LabelFor(model => model.UserTypeId, "Role", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DropDownListFor(model => model.UserTypeId, (SelectList)ViewBag.UserRoles, "Select Role", new { @class = "form-select dropdown-toggle", @disabled = "disabled" })
                        @Html.ValidationMessageFor(model => model.UserTypeId, "", new { @class = "text-danger validation-message", data_valmsg_for = "UserTypeId" })
                    </div>
                </div>
                <div class="form-group row mb-2 px-4">
                    <div class="col-6 col-md-4">
                        @Html.Label("Is Active")
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.CheckBoxFor(model => model.IsEnabled, new { @class = "form-check-input", @id = "flexSwitchCheckChecked", @disabled = "disabled" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary custom-primary"><i class="bi bi-pencil"></i>Modify</button>
            <button type="button" class="btn btn-secondary" id="btnCancel" data-bs-dismiss="modal">Cancel</button>
        </div>
    }
</div>